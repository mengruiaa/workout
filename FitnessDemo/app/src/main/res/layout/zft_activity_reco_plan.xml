<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg2"
    tools:context=".ZFT.RecoPlanActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <TextView
        android:id="@+id/pic_chose_title"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="65dp"
        android:lineSpacingExtra="5sp"
        android:text="以下是我们为您推荐的计划"
        android:textColor="#4a4a4a"
        android:textSize="24sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/pic_chose_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="5dp"
        android:text="以便为您更方便地选择"
        android:textColor="#9b9b9b"
        android:textSize="13sp"
        android:layout_below="@+id/pic_chose_title"/>
    <ImageView
        android:id="@+id/pic_chose_icon"
        android:layout_width="52dp"
        android:layout_height="74dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="25dp"
        android:layout_marginTop="65dp"
        android:src="@drawable/apphead"/>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rl_recommand"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pic_chose_hint"
        android:layout_centerInParent="true"
        android:layout_margin="20dp"/>

    <Button
        android:layout_below="@+id/rl_recommand"
        android:id="@+id/btn_ok"
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:text="OK"
        android:textSize="24sp"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:layout_centerInParent="true"
        android:background="@drawable/clock_in_shape"/>
    </RelativeLayout>
</ScrollView>