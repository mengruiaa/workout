<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:visibility="visible">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="23dp"
            android:includeFontPadding="false"
            android:maxHeight="16sp"
            android:text="性别"
            android:textColor="#cc222222"
            android:textSize="15sp"/>

        <CheckBox
            android:id="@+id/btn_register_info_sex"
            android:layout_width="250dp"
            android:layout_height="82dp"
            android:layout_marginTop="11dp"
            android:background="@drawable/user_sex_selector"
            android:button="@null"
            android:gravity="center"/>-->
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="23dp"
            android:layout_marginTop="27dp"
            android:background="@drawable/register_info_line"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:maxHeight="17sp"
            android:text="身高(cm)"
            android:textColor="#cc222222"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_register_info_height_value"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="11dp"
            android:includeFontPadding="false"
            android:maxHeight="24sp"
            android:text="165"
            android:textColor="#cc222222"
            android:textSize="24sp"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">

            <com.example.fitnessdemo.ZFT.RulerView
                android:id="@+id/ruler_height"
                android:layout_width="fill_parent"
                android:layout_height="78dp"
                android:layout_marginTop="24dp"
                app:alphaEnable="true"
                app:lineColor="@color/colorAAA"
                app:lineMaxHeight="40dp"
                app:lineMidHeight="30dp"
                app:lineMinHeight="20dp"
                app:lineSpaceWidth="10dp"
                app:lineWidth="5dp"
                app:textColor="@color/colorBlack"
                app:minValue="80.0"
                app:maxValue="250.0"
                app:perValue="1"
                app:textSize="24sp"
                app:selectorValue="165.0"
                />

            <ImageView
                android:layout_width="14dp"
                android:layout_height="46dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="11dp"
                android:scaleType="fitXY"
                android:src="@drawable/user_info_ruler_height"/>
        </RelativeLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="1.0dip"
            android:layout_marginBottom="23dp"
            android:layout_marginTop="27dp"
            android:background="@drawable/register_info_line"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:maxHeight="17sp"
            android:text="体重(kg)"
            android:textColor="#cc222222"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_register_info_weight_value"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginTop="11dp"
            android:includeFontPadding="false"
            android:maxHeight="24sp"
            android:text="55"
            android:textColor="#cc222222"
            android:textSize="24dp"/>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0">

            <com.example.fitnessdemo.ZFT.RulerView
                android:id="@+id/ruler_weight"
                android:layout_width="fill_parent"
                android:layout_height="68dp"
                android:layout_marginTop="24dp"
                app:alphaEnable="true"
                app:lineColor="@color/colorAAA"
                app:lineWidth="2dp"
                app:textColor="@color/colorBlack"
                app:textSize="18sp"
                />

            <ImageView
                android:layout_width="14dp"
                android:layout_height="46dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="6dp"
                android:scaleType="fitXY"
                android:src="@drawable/user_info_ruler_height"/>
        </RelativeLayout>
        <Button
            android:id="@+id/zft_btn_check"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="确认"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/colorWhite"
            android:background="@drawable/shape"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>
</LinearLayout>
