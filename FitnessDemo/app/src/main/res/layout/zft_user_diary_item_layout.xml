<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_margin="10dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/tv_zft_h1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your exerise history"
        android:layout_marginLeft="10dp"/>

    <View
        android:id="@+id/vv_line"
        android:layout_below="@+id/tv_zft_h1"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="@color/colorBlue"/>

    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/vv_line"
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:gravity="center"
        android:background="@drawable/add_shape"
        android:text="打卡"
        android:textColor="@color/colorWhite"/>

    <TextView
        android:id="@+id/tv_zft_time"
        android:layout_below="@+id/vv_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0次"
        android:textSize="24sp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp" />

    <ImageView
        android:layout_marginTop="5dp"
        android:layout_below="@+id/tv_zft_time"
        android:layout_width="350dp"
        android:layout_height="130dp"
        android:layout_centerInParent="true"/>
</RelativeLayout>