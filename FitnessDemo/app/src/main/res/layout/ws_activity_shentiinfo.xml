<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ws.ShentiinfoActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="#584f60"
        android:layout_height="50dp">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_centerVertical="true"
            android:padding="6dp"
            android:src="@drawable/back3" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_toRightOf="@+id/iv_back"
            android:gravity="center"
            android:text="健康数据"
            android:textColor="@android:color/white"
            android:textSize="18sp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="360dp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/ws_inofotv1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="身体数据"
                android:gravity="center"
                android:textColor="#666666"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="以为你展示最新数据"
                android:layout_toRightOf="@+id/ws_inofotv1"
                android:layout_marginLeft="12dp"
                android:gravity="center"
                android:textColor="#bfbfbf"/>
            <ImageView
                android:id="@+id/img_infojia"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@drawable/userinfojia"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical">
           <RelativeLayout
               android:layout_width="match_parent"
               android:layout_height="80dp">
               <ImageView
                   android:id="@+id/shenti_img1"
                   android:layout_width="45dp"
                   android:layout_height="45dp"
                   android:src="@drawable/kg"
                   android:layout_centerVertical="true"/>
               <TextView
                   android:id="@+id/ws_infotv1"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:text="体重"
                   android:textSize="18dp"
                   android:layout_marginLeft="10dp"
                   android:gravity="center"
                   android:layout_toRightOf="@id/shenti_img1"
                   android:textColor="#666666"/>
               <ImageView
                   android:id="@+id/shenti_img2"
                   android:layout_width="20dp"
                   android:layout_height="20dp"
                   android:src="@drawable/backws"
                   android:layout_alignParentRight="true"
                   android:layout_centerVertical="true"/>
               <TextView
                   android:id="@+id/ws_infotv2"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:text="kg"
                   android:textSize="24dp"
                   android:textStyle="bold"
                   android:layout_marginLeft="10dp"
                   android:layout_marginRight="10dp"
                   android:gravity="center"
                   android:layout_toLeftOf= "@id/shenti_img2"
                   android:textColor="#666666"/>
               <TextView
                   android:id="@+id/shengti_weight"
                   android:layout_width="wrap_content"
                   android:layout_height="match_parent"
                   android:text="60.0"
                   android:textSize="24dp"
                   android:textStyle="bold"
                   android:gravity="center"
                   android:layout_toLeftOf= "@id/ws_infotv2"
                   android:textColor="#666666"/>
           </RelativeLayout>
           <View
               android:layout_width="match_parent"
               android:layout_height="0.5dp"
               android:background="#8a8a8a" />
       </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <ImageView
                    android:id="@+id/shenti_img3"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/tall"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/ws_infotv3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="身高"
                    android:textSize="18dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:layout_toRightOf="@id/shenti_img3"
                    android:textColor="#666666"/>
                <ImageView
                    android:id="@+id/shenti_img4"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/backws"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/ws_infotv4"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="cm"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:layout_toLeftOf= "@id/shenti_img4"
                    android:textColor="#666666"/>
                <TextView
                    android:id="@+id/shengti_height"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="170.0"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_toLeftOf= "@id/ws_infotv4"
                    android:textColor="#666666"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#8a8a8a" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <ImageView
                    android:id="@+id/shenti_img5"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/bmi"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/ws_infotv5"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="BMI"
                    android:textSize="18dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:layout_toRightOf="@id/shenti_img5"
                    android:textColor="#666666"/>

                <ImageView
                    android:id="@+id/shenti_img6"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/backws" />

                <TextView
                    android:id="@+id/shengti_bmi"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="20.0"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_toLeftOf= "@id/shenti_img6"
                    android:textColor="#666666"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#8a8a8a" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="80dp">
                <ImageView
                    android:id="@+id/shenti_img7"
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:src="@drawable/tihzhi"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/ws_infotv7"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="体重"
                    android:textSize="18dp"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:layout_toRightOf="@id/shenti_img7"
                    android:textColor="#666666"/>
                <ImageView
                    android:id="@+id/shenti_img8"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/backws"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"/>
                <TextView
                    android:id="@+id/ws_infotv8"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="%"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:gravity="center"
                    android:layout_toLeftOf= "@id/shenti_img8"
                    android:textColor="#666666"/>
                <TextView
                    android:id="@+id/shengti_tizhi"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="18"
                    android:textSize="24dp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:layout_toLeftOf= "@id/ws_infotv8"
                    android:textColor="#666666"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#8a8a8a" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>