<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".CLB.EncyclopaediaActivity">
        <LinearLayout
            android:id="@+id/ll1"
            android:layout_margin="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <ImageView
                    android:background="@mipmap/clb_cusp2"
                    android:id="@+id/iv_clb_cusp1"
                    android:layout_width="32dp"
                    android:layout_height="32dp"/>
                <TextView
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center_vertical"
                    android:textSize="20sp"
                    android:text="百科全书"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
        </LinearLayout>

        <com.youth.banner.Banner
            android:background="#F5F5F5"
            android:padding="10dp"
            android:id="@+id/banner"
            android:layout_width="match_parent"
            android:layout_height="101dp"/>
        <LinearLayout
            android:background="#FFFFFF"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#ffffff"
            android:orientation="horizontal">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/follow_category_rv"
                    android:layout_width="85dp"
                    android:layout_height="match_parent" />
<!--
                <androidx.viewpager.widget.ViewPager
                    android:background="#FFFFFF"
                    android:id="@+id/follow_fragment_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                    -->
                <com.example.fitnessdemo.CLB.dialog.MyViewPager
                    android:background="#FFFFFF"
                    android:id="@+id/follow_fragment_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>
        </LinearLayout>





</LinearLayout>