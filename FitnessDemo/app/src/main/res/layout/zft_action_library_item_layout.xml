<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="match_parent"
    android:layout_height="110dp"
    android:background="@color/colorWhite"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <View
        android:layout_width="5dp"
        android:layout_height="140dp"
        android:background="@color/colorAAA"/>
    <View
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/colorAAA"/>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="140dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/iv_actionImg"
                android:layout_width="100dp"
                android:layout_height="60dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"/>

            <TextView
                android:id="@+id/tv_actionName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手臂环绕"
                android:textSize="24sp"
                android:textColor="@color/colorBlack"
                android:layout_toRightOf="@+id/iv_actionImg"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"/>
            <TextView
                android:id="@+id/tv_actionStar"
                android:layout_below="@+id/tv_actionName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="难度 "
                android:layout_toRightOf="@+id/iv_actionImg"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"/>
        </RelativeLayout>
    </LinearLayout>
    <Button
        android:id="@+id/btn_addAction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/shape"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:text="添加"
        android:textSize="16sp"
        android:textColor="@color/colorWhite"/>
</RelativeLayout>