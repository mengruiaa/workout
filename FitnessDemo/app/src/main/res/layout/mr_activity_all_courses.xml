<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/mrback3">
    <ImageView
        android:id="@+id/fanhui"
        android:layout_width="30dp"
        android:layout_height="50dp"
        android:src="@drawable/mrfanhui"
        android:layout_marginLeft="10dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <Button
            android:id="@+id/sousuo"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@mipmap/sousuo" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="全部课程分类"
            android:textSize="15dp"
            android:textColor="@android:color/black"
            android:layout_marginLeft="120dp"/>
    </LinearLayout>
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tabLayout_cs"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:background="#ffff00"
        app:tabIndicatorColor="@android:color/black"
        app:tabIndicatorHeight="5dp"
        app:tabTextColor="@color/colorPrimary"
        app:tabSelectedTextColor="@android:color/holo_red_light"
        app:tabMode="scrollable"
        app:tabBackground="@drawable/selected"/>
<!--    <com.flyco.tablayout.SlidingTabLayout android:layout_height="30dp"-->
