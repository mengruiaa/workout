<!--        app:tl_textSelectColor="@android:color/holo_blue_bright"-->
<!--        app:tl_textUnselectColor="@android:color/black"-->
<!--        app:tl_indicator_color="@android:color/holo_red_light"-->
<!--        app:tl_divider_width="5dp"-->
<!--        app:tl_divider_color="@android:color/holo_orange_dark"-->
<!--        app:tl_indicator_width_equal_title="true"-->
<!--        app:tl_tab_space_equal="true"-->
<!--        app:tl_textsize="15dp"-->
<!--        android:id="@+id/sl325" />-->
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
</LinearLayout>