<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".ws.RegisterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="48dp">

        <ImageView
            android:id="@+id/iv_register"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/back2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="注册"
            android:textSize="28sp"/>
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="45dp"
        android:orientation="vertical">
        <EditText
            android:id="@+id/edit_registeruser"
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:singleLine="true"
            android:background="@drawable/rounded_editview"
            android:gravity="center_vertical"
            android:layout_marginBottom="10dp"
            android:hint="请输入账号"/>
<!--        <LinearLayout
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/rounded_editview2"
            android:orientation="horizontal">
            <EditText
                android:id="@+id/edit_registervalid"
                android:layout_width="240dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:paddingLeft="10dp"
                android:inputType="numberPassword"
                android:background="@null"
                android:hint="请输入验证码"/>
            <TextView
                android:id="@+id/tv_yanzhengma"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:paddingTop="15dp"
                android:paddingLeft="20dp"
                android:text="发送验证码"/>
        </LinearLayout>-->

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:passwordToggleEnabled="true"
            >
        <EditText
            android:id="@+id/edit_registerpwd"
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:singleLine="true"
            android:background="@drawable/rounded_editview"
            android:gravity="center_vertical"
            android:hint="请输入密码"
            android:inputType="numberPassword" />
        </com.google.android.material.textfield.TextInputLayout>
        <Button
            android:id="@+id/btn_register"
            android:layout_width="360dp"
            android:layout_height="50dp"
            android:layout_gravity="center"
            android:background="@drawable/button_circle_shape"
            android:text="注册"
            android:textStyle="normal"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:layout_marginTop="20dp"/>
        <RelativeLayout
            android:layout_width="360dp"
            android:layout_height="25dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="10dp">
            <RadioButton
                android:id="@+id/rb_message_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我已阅读并同意"
                android:textColor="#888888"
                style="@style/CustomRadioTheme" />
            <TextView
                android:id="@+id/tv_registerapp"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="APP用户协议"
                android:gravity="center"
                android:textColor="@android:color/holo_blue_dark"
                android:layout_toRightOf="@id/rb_message_radio"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>